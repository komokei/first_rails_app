.to-yazirushi-menu {
  width: 200px;
  display: inline-block;
  position: relative;
    li {
      padding: 0% 1%;
      float: left;
      display: block;
      position: absolute;
    }
}

.yazirushi-box {
  width: 40px;
  height: 20px;
  background-color: #FF70BC;
}

.to-yazirushi-seccond {
  -webkit-animation: yazirushi-se 4s ease 1.5s infinite forwards;
  animation: yazirushi-se 4s ease 1.5s infinite forwards;
}

.to-yazirushi-third {
  -webkit-animation: yazirushi-th 4s ease 1.5s infinite forwards;
  animation: yazirushi-th 4s ease 1.5s infinite forwards;
  position: relative;
}

.right-sankaku {
  content: ".";
}

.right-sankaku {
   position: relative;
}

.right-sankaku::after {
  position: absolute;
  top: 0px;
  left: 40px;
  content: '';
  width: 0;
  height: 0;
  border-right: 10px solid transparent;
  border-top: 10px solid transparent;
  border-left: 10px solid #FF70BC;
  border-bottom: 10px solid transparent;
  -webkit-animation : yazirushi-to-big 4s ease-in-out 1.5s infinite forwards;
  animation : yazirushi-to-big 4s ease-in-out 1.5s infinite forwards;
}

/* ----------------------
アニメーション / keyframes
------------------------*/

@-webkit-keyframes yazirushi-to-big {
  0% {
    border-right: 10px solid transparent;
    border-top: 10px solid transparent;
    border-left: 10px solid #FF70BC;
    border-bottom: 10px solid transparent;
  }

  40% {
    top: -10px;
    border-right: 20px solid transparent;
    border-top: 20px solid transparent;
    border-left: 20px solid #FF70BC;
    border-bottom: 20px solid transparent;
  }

  100% {
    top: -10px;
    border-right: 20px solid transparent;
    border-top: 20px solid transparent;
    border-left: 20px solid #FF70BC;
    border-bottom: 20px solid transparent;
  }
}

@keyframes yazirushi-to-big {
  0% {
    border-right: 10px solid transparent;
    border-top: 10px solid transparent;
    border-left: 10px solid #FF70BC;
    border-bottom: 10px solid transparent;
  }

  40% {
    top: -10px;
    border-right: 20px solid transparent;
    border-top: 20px solid transparent;
    border-left: 20px solid #FF70BC;
    border-bottom: 20px solid transparent;
  }

  100% {
    top: -10px;
    border-right: 20px solid transparent;
    border-top: 20px solid transparent;
    border-left: 20px solid #FF70BC;
    border-bottom: 20px solid transparent;
  }
}

/* --- 【アニメーション] 矢印② --- */
@-webkit-keyframes yazirushi-se {
  0% {
     margin-left: 0;
  }

  20% {
    margin-left: 60px;
  }

  100% {
    margin-left: 60px;
  }
}

@keyframes yazirushi-se {
  0% {
     margin-left: 0;
  }

  20% {
    margin-left: 60px;
  }

  100% {
    margin-left: 60px;
  }
}

/* --- 【アニメーション] 矢印③ --- */
@-webkit-keyframes yazirushi-th {
  0% {
    margin-left: 0;
  }

  30% {
    margin-left: 120px;
  }

  100% {
    margin-left: 120px;
  }
}

@-webkit-keyframes yazirushi-th {
  0% {
    margin-left: 0;
  }

  30% {
    margin-left: 120px;
  }

  100% {
    margin-left: 120px;
  }
}
