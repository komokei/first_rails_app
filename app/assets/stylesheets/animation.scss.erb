.to-yazirushi-menu {
	width: 200px;
	display: inline-block;
	position: relative;
		&:after {
			clear: both;
		}

	li {
		padding: 0% 1%;
		float: left;
		display: block;
		position: absolute;
	}
}

.yazirushi-box {
	width: 40px;
	height: 20px;
	background-color: red;
}

.to-yazirushi-first {
	
}

.to-yazirushi-seccond {
	-webkit-animation: www 5s ease 1.5s infinite forwards;
}

.to-yazirushi-third {
	-webkit-animation: www2 5s ease 1.5s infinite forwards;
}

@-webkit-keyframes www {
	0% {
		margin-left: 0;
	}

	20% {
		margin-left: 60px;
	}

	100% {
		margin-left: 60px;
	}
}

@-webkit-keyframes www2 {
	0% {
		margin-left: 0;
	}

	30% {
		margin-left: 120px;
	}

	100% {
		margin-left: 120px;
	}
}

